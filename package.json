  "license": "MIT",
  "scripts": {
    "start": "razzle start",
    "build": "razzle build",
    "prettier": "prettier '{package.json,tsconfig.json,src/**/*.{ts,tsx},razzle.config.js}' --write",
    "test": "razzle test --env=jsdom",
    "tsc": "tsc",
    "tslint": "tslint --project .",
    "start:prod": "NODE_ENV=production node build/server.js"
  },
  "dependencies": {
    "@jaredpalmer/after": "^1.3.1",
    "@material-ui/core": "^4.1.3",
    "@material-ui/icons": "^4.2.1",
    "@material-ui/styles": "^4.3.0",
    "@mdx-js/loader": "^1.3.1",
    "@mdx-js/mdx": "^1.3.1",
    "@mdx-js/react": "^1.3.1",
    "@types/classnames": "^2.2.9",
    "@types/node": "^12.7.1",
    "@types/react": "^16.9.1",
    "@types/react-dom": "^16.8.5",
    "activitystreams2": "0.0.2",
    "classnames": "^2.2.6",
    "co-body": "^6.0.0",
    "dompurify": "^1.0.11",
    "fp-ts": "^2.0.5",
    "history": "^4.9.0",
    "io-ts": "^2.0.1",
    "jsdom": "^15.1.1",
    "koa": "^2.7.0",
    "koa-helmet": "^5.0.0",
    "koa-mount": "^4.0.0",
    "koa-route": "^3.2.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "mdi-material-ui": "^6.3.0",
    "node-html-parser": "^1.1.16",
    "razzle-plugin-mdx": "file:./packages/razzle-plugin-mdx",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router": "^5.0.1",
    "react-router-dom": "4.3.1",
    "react-use-websocket": "^0.9.4",
    "reflect-metadata": "^0.1.13",
    "tslint-react": "^4.0.0",
    "uuid": "^3.3.3",
    "ws": "^7.1.2"
  },
  "devDependencies": {
    "@types/co-body": "0.0.3",
    "@types/dompurify": "0.0.33",
    "@types/jest": "^24.0.17",
    "@types/jsdom": "^12.2.4",
    "@types/koa": "^2.0.49",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-mount": "^4.0.0",
    "@types/koa-route": "^3.2.4",
    "@types/koa-router": "^7.0.42",
    "@types/koa-static": "^4.0.1",
    "@types/react-router": "^5.0.3",
    "@types/react-router-dom": "^4.3.4",
    "@types/uuid": "^3.4.5",
    "@types/webpack-env": "^1.14.0",
    "@types/ws": "^6.0.2",
    "prettier": "^1.18.2",
    "razzle": "^3.0.0",
    "razzle-plugin-typescript": "^3.0.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "ts-jest",
      "\\.css$": "<rootDir>/node_modules/razzle/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/node_modules/razzle/config/jest/fileTransform.js"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(ts|js)?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ]
  }
}
